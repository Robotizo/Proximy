
<%= stylesheet_link_tag "groups_mobile", :media => "all" %>
<style type="text/css">
	.elementBoxMob{
		margin-bottom: 10px;
		float: left;
	

	}

	.eventImageDisplayLoaded img{
		height: 80px;
		border-radius: 5px 0px 0px 5px !important;
	}


	.eventImageDisplayLoaded {
		height: 80px;
		border-radius: 5px 0px 0px 5px !important;
	}

	.eventImageMob {
		height: 80px;
		border-radius: 5px 0px 0px 5px !important;
	}

	.eventImageMob img{
		height: 80px;
		border-radius: 5px 0px 0px 5px !important;
	}
</style>


<% if @eventsFollow.present? %>
<% @eventsFollow.each do |eventsFollowing| %>





	<div class="col-xs-12 noPad3">
		<div class="elementBoxEvents">
			<div class="col-xs-4 noPad3">
				
              <a href="/events/<%= eventsFollowing.id %>" data-method="get" data-href="<%= eventsFollowing.image_url(:event) %>" class="lazy-load replace eventImageDisplayLoaded">
                  <%= image_tag(eventsFollowing.image_url(:preview), class: "eventImageMob preview") if eventsFollowing.image? %>
                </a>


			</div>
			<%= link_to eventsFollowing, method: :get, class: "specialA" do %>

			<div class="col-xs-8 noPad3">
				<div class="eventInfoTitleModule">
					<%= eventsFollowing.title %>
				</div>
				<div class="eventInfoTitleModuleDate">
					<%= eventsFollowing.event_date.strftime('%B %e') %>
				</div>

			</div>
			<% end %>
			 	
		</div>
	
	</div>




<% end %>
<% else %>
	<div class="eventInfoTitleModule text-center">
		There are no upcoming events
	</div>
<% end %>







