<%= stylesheet_link_tag "users", :media => "all" %>
<%= stylesheet_link_tag "animate", :media => "all" %>
<script type="text/javascript">
  $(document).ready(function () {
   



      setTimeout(function() {
       $(".alert").fadeOut("1000");
      }, 4000);


    })

</script>





<% if flash[:notice] %>
<div class="alert animated pulse " role="alert">
  <div class="alert-success">
      <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  </div>


</div>
<% end %>


<style>

	.elementBoxPpl{
		margin-bottom: 5px;
		padding-bottom: 5px;
	}

	.userImages img{
		height: auto !important;

	}

	.userImages{
		border-radius: 8px 8px 0px 0px !important;
	}

	.userBox{
		margin-bottom: 20px;
	}


</style>


<div class="backButton">
  <%= link_to 'javascript:history.back()' do %>
        <%= image_tag("left-arrow.png", size: "54x54", class: "leftArrow") %>
  <% end %>
</div>


<div class="container noPad3">

	<%= render 'userModule' %>	

	<div class="mobileArea col-md-8 col-xs-12 noPad3">

		<div class="col-xs-12 noPad3">
			<%= render 'editMenu' %>
		</div>	

<div class="col-xs-12" style="margin-top: 20px;">


	<% @blockedUsers.each do |blockedUser| %>
		<div class="col-md-3 col-xs-6 noPad8PX userBox " data-aos="fade-up" >
          <div class="elementBoxPpl">


       


          <a href="<%= blockedUser.avatar_url(:thumb) %>"   class="lazy-load replace userImages">
                <%= image_tag(blockedUser.avatar_url(:thumb), class: "userImages preview") if blockedUser.avatar? %>
        
           </a>

     

          <div class="discoverTitleSec">
            <div class="discoverName"><%= truncate(blockedUser.name.gsub(/\s.+/, '')) %></div>

            
          </div>



          

          </div>
          <%= render 'unblock', user: blockedUser %>
        </div>
     
	<% end %>


</div>






















