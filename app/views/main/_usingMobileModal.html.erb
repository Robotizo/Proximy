<style type="text/css">
  
    .welcomeTitle{
    text-align: center;
    font-size: 18px;
    margin-bottom: 10px;
    font-weight: 900;
    color: #508cf7;
  }
  .welcomeText{
    text-align: center;
    font-size: 14px;
    margin-bottom: 5px;
    font-weight: 700;
    margin-left: 30px;
    margin-right: 30px;
  }

  .modal-content{
    padding: 0px;
  }



.fixedStatePro{
    background-color: #508cf7;
    padding: 16px;
    border-radius: 100px;
    position: fixed;
    display: block;
    left: 50%;
    width: 75%;
    text-align: center;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    top: 470px;
    height: 50px;
    z-index: 100;
    bottom: 50px;
    opacity: 1 !important;
    cursor: pointer;
    transition: 0.3s;
}

.fixedStatePro:hover{
  background-color: #4980e2;
}

.editsTextPro{
  padding: 0px 10px;
  color: white;
  font-size: 14px;
  font-weight: 900;

  position: relative;
}


</style>






<div class="modal fade" id="myModaTest" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">




    <!-- Wrapper for slides -->

    
      <div class="item">
        <%= image_tag 'desktopAccess.jpg', class: "i_t_image" %>
      </div>


    
      <div class="modal-body" style="margin: 20px;">
        <div class="welcomeTitle">
          Welcome to Proximy Lite
        </div>
         <div class="welcomeText">
          You are currenly using a lite version of Proximy for mobile. To access full app, please use Proximy on a desktop computer.
        </div>
      </div>



    </div>        
  </div>
 
      <div class="fixedStatePro"  data-dismiss="modal" >
          <div class="editsTextPro">Dismiss</div>
        </div>




</div>




























