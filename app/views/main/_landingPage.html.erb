<script type="text/javascript">
  
  $(window).on('load', function(){
    $("#cover").fadeOut(200);
  });


  $(document).ready(function animateThis() {
    var scrollWidth = $('.scrollmenu').width();
    $('.scrollmenu').animate({ scrollLeft: scrollWidth + (scrollWidth + 100)},
      {
        duration: 30000,
        complete: function (){
          $('.scrollmenu').animate({ scrollLeft: 0 },
          {
            duration: 30000, 
            complete: function () {
              animateThis();
            }
          })
        }
      });

  });

</script>





