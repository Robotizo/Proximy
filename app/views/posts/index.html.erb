<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
  
        <td><%= post.content %></td>
        <td><%= link_to 'View Post', post_path(post), remote: true %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div id='post-content'></div>

