<%= form_for(notification_event) do |f| %>
  <% if notification_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(notification_event.errors.count, "error") %> prohibited this notification_event from being saved:</h2>

      <ul>
      <% notification_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :greet %>
    <%= f.text_field :greet %>
  </div>


  <div class="field">
    <%= f.label :event_id %>
    <%= f.collection_select(:event_id, @events, :id, :title, {prompt: "Choose a Event"}) %>
  </div>

  <div class="field">
    <%= f.label :recipient_id %>
    <%= f.collection_select(:recipient_id, @users, :id, :name, {prompt: "Choose a User"}) %>
  </div>

  

  <div class="field">
    <%= f.label :sender_id %>
    <%= f.hidden_field :sender_id, value: current_user.id %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
