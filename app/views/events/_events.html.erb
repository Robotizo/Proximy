
          <% @events.each do |event| %>
          <% collide = current_user.followingI.ids & event.fgE.ids %>
          <% if Date.today <= event.event_date %>

            <div class="col-md-4 col-xs-12 testMarge">
              <%= link_to event, class: "specialA" do %>
                <div class="elementBox">
                  <%= image_tag(event.image_url(:event), class: "groupImageDisc", lazy: true) if event.image? %>
                  <div class="eventContentDisc">
                    <div class="eventDateDisc"><%= event.event_date.strftime('%B %e') %></div>
                  </div>
                  <div class="eventTitleDisc"><%= truncate(event.title, length: 35) %></div>
                    <div class="sharedIntsEvents">
                      <%= collide.count %> Shared interests
                    </div>
                </div>
              <% end %>
              </div>
          <% end %>
          <% end %>




