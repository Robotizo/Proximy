<%= stylesheet_link_tag "events", :media => "all" %>
<%= javascript_include_tag 'events', 'data-turbolinks-track': 'reload' %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<p id="notice"><%= notice %></p>

<div class="container mobileArea">

  <ul class="nav nav-tabs" id="events-nav" role="tablist">
    <li class="nav-item active col-md-3 col-md-offset-2 mobNavs">
      <a class="nav-link btn btn-prox" id="events-tab" data-toggle="tab" href="#events" role="tab" aria-controls="my events tab">
        Discover
      </a>
    </li>
    <li class="nav-item col-md-3 col-md-offset-2 mobNavs">
      <a class="nav-link btn btn-prox" id="discover-tab" data-toggle="tab" href="#discover" role="tab" aria-controls="discover tab">
        My Events
      </a>
    </li>
  </ul>

  <div class="tab-content" id="events-nav-content">
    <div class="tab-pane active" id="events" role="events-tab-pane" aria-labelledby="events-tab">

      <h2 class="topTitle2">Discover</h2>
      
          
          <% @events.each do |event| %>
            <div class="col-md-4 col-xs-12">
              <%= link_to event, method: :get, class: "specialA" do %>
                <div class="groupBlock">
                  <%= image_tag(event.image_url(:event), class: "groupImageDisc") if event.image? %>
                  <div class="eventContentDisc">
                    <div class="eventDateDisc"><%= event.event_date.strftime('%B %e') %></div>
                  </div>
                  <div class="groupTitleDisc"><%= event.title %></div>
                </div>
              <% end %>
              </div>

          <% end %>


    </div>
    <div class="tab-pane" id="discover" role="discover-tab-pane" aria-labelledby="discover-tab">
        <div class="mainField">
        <h2 class="topTitle2">My Events</h2>
        <div class="newsfeedIndex text-center ">
        <% if @eventsFollow.present? %>
          <div class="scrollGroupsI">

                  <% @eventsFollow.each do |eventsFollowing| %>
                    <%= link_to eventsFollowing, method: :get, class: "specialA item" do %>
                      <div class="groupBlock">
                        <%= image_tag(eventsFollowing.image_url(:event), class: "groupImageI") if eventsFollowing.image? %>
                        <div class="eventContent1">
                          <div class="eventDateI"><%= eventsFollowing.event_date.strftime('%B %e') %></div>
                        </div>
                        <div class="groupTitleI"><%= eventsFollowing.title %></div>
                      </div>
                    <% end %>
                  <% end %>

          </div>

          <% else %>
            <div class="nothing">
              You haven't joined any event
            </div>
          <% end %>
        </div>
      </div>

            <div class="mainField">
        <h2 class="topTitle2">Created Events</h2>
        <div class="newsfeedIndex text-center ">
        <% if @user_events.present? %>
          <div class="scrollGroupsI">

                  <% @user_events.each do |events| %>
                    <%= link_to events, method: :get, class: "specialA item" do %>
                      <div class="groupBlock">
                        <%= image_tag(events.image_url(:event), class: "groupImageI") if events.image? %>
                        <div class="eventContent1">
                          <div class="eventDateI"><%= events.event_date.strftime('%B %e') %></div>
                        </div>
                        <div class="groupTitleI"><%= events.title %></div>
                      </div>
                    <% end %>
                  <% end %>
  
          </div>
          <% else %>
            <div class="nothing">
              You haven't created any event
            </div>
          <% end %>
        </div>
      </div>


          


    </div>
  </div>



</div>

  <div class="col-md-12">
    <br>
    <br>
    <br>
    <br>
    <br>

  </div>

